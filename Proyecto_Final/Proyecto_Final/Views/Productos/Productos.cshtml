@model IEnumerable<BusinessLayer.Producto>

@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productos</h2>
<p>@Html.ActionLink("Crear","Crear","Productos")</p>
<table class="table table-striped table-hover">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.productName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.categoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.productName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productStock)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.productImage)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.categoryName)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.productId }) |
                @Html.ActionLink("Borrar", "Borrar", new { id = item.productId })
            </td>
        </tr>
    }

</table>
